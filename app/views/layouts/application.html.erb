<!DOCTYPE html>
<html>
<head>
  <title>garage.io | The garage spot</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='container'>
    
    <div class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/cars">garage.io</a>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li><a href="/cars">Cars</a></li>
              <li><a href="/cars/new">New Car</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% if current_user %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Signed in as <%= current_user.name %><b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><a href="/logout">Logout</a></li>
                  </ul>
                </li>
              <% else %>
                <li><a href="/login">Login</a></li>
                <li><a href="/signup">Signup</a></li>
              <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </div>

      <% flash.each do |name, msg| %>
        <div class="alert alert-info">
          <a class="close" data-dismiss="alert">Ã—</a>
          <ul>
          <% msg.each do |m| %>
            <li><%= m %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= yield %>

  </div>
</body>
</html>
